#!/bin/bash
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"

# If no arguments provided, show help
if [ $# -eq 0 ]; then
    bash "$SCRIPT_DIR/job-help.sh"
    exit 0
fi

case "$1" in
    start)
        shift
        (bash "$SCRIPT_DIR/job-start.sh" "$@")
        ;;
    monitor)
        shift
        (bash "$SCRIPT_DIR/job-monitor.sh" "$@")
        ;;
    end)
        shift
        (bash "$SCRIPT_DIR/job-end.sh" "$@")
        ;;    
    profile)
        shift
        (bash "$SCRIPT_DIR/profile-new.sh" "$@")
        ;;
    su)
        shift
        (bash "$SCRIPT_DIR/job-su.sh" "$@")
        ;;
    modify)
        shift
        (bash "$SCRIPT_DIR/job-modify.sh" "$@")
        ;;        
    --help|-h)
        bash "$SCRIPT_DIR/job-help.sh"
        ;;
    *)
        echo "Usage: $(basename "$0") {start|monitor|end|profile|su|modify} [--help]"
        echo "Use 'job --help' for detailed information."
        exit 1
        ;;
esac
